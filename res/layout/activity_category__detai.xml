<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#d02828">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:id="@+id/back_category"
            android:layout_centerVertical="true"/>
        <cn.ucai.fulicenter.CatChildFilterButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_catchildfliter"
            android:drawableRight="@drawable/arrow2_up"
            android:text="分类"
            android:textColor="@color/white"
            android:background="@null"
            android:layout_marginLeft="55dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
        <cn.ucai.fulicenter.ColorFilterButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f90"
            android:text="筛选"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:id="@+id/btn_colorfilter"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f9f5f5">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="价格"
            android:textColor="#000"
            android:background="#d2a9a9"
            android:drawableRight="@drawable/arrow_order_up"
            android:paddingRight="20dp"
            android:textSize="20sp"
            android:id="@+id/price_category"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="上架时间"
            android:drawableRight="@drawable/arrow_order_up"
            android:paddingRight="20dp"
            android:background="#d2a9a9"
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/addtime_category"/>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Refresh_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新中"
                android:textSize="20sp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
